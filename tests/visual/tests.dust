<style>
    /* Test-specific fixture styles go here. */
</style>

{@c-spec for="Progress Bar Component" repository=repo}
    {@c-spec__test describe=".c-progress-bar"}
        {@c-spec__case expect="Should have a progress bar, a label, and a value"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65/}
        {/c-spec__case}

        {@c-spec__case expect="If useSpinner=true, the spinner is shown and the progress bar is hidden"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner/}
        {/c-spec__case}
    {/c-spec__test}

    {@c-spec__test describe="UI Script"}
        {@c-spec__case expect="The progress can be updated by calling setProgress"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65/}
            {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner/}
            <input type="number" class="test__input--change-progress">%
            <button class="test__button--change-progress">Set Progress</button>
        {/c-spec__case}

        {@c-spec__case expect="When the progress changes, the bar and value update"}
            {@c-progress-bar state=state_progress label=label_progress/}
            <button class="test__button--start-progress">Start Progress</button>
        {/c-spec__case}

        {@c-spec__case expect="When the progress changes, the spinner and value update"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner/}
            <button class="test__button--start-progress">Start Progress</button>
        {/c-spec__case}
    {/c-spec__test}

    {@c-spec__test describe="State"}
        {@c-spec__case expect="When state=progress, the bar and text are black and the value is displayed"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65/}
        {/c-spec__case}

        {@c-spec__case expect="When state=success, the bar and text are green and a check icon is displayed"}
            {@c-progress-bar state=state_success label=label_success value=0.65/}
        {/c-spec__case}

        {@c-spec__case expect="When state=error, the bar and text are red and a redo icon is displayed"}
            {@c-progress-bar state=state_error label=label_error value=0.65/}
        {/c-spec__case}

        {@c-spec__case expect="When state=progress, the spinner and text are black and the value is displayed"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner/}
        {/c-spec__case}

        {@c-spec__case expect="When state=success, the spinner and text are green and a check icon is displayed"}
            {@c-progress-bar state=state_success label=label_success value=0.65 useSpinner=useSpinner/}
        {/c-spec__case}

        {@c-spec__case expect="When state=error, the spinner and text are red and a redo icon is displayed"}
            {@c-progress-bar state=state_error label=label_error value=0.65 useSpinner=useSpinner/}
        {/c-spec__case}

        {@c-spec__case expect="The state can be set by calling setState"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65/}
            {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner/}
            <select class="test__button--change-state">
                <option value="progress">Set State: progress</option>
                <option value="success">Set State: success</option>
                <option value="error">Set State: error</option>
            </select>
        {/c-spec__case}
    {/c-spec__test}

    {@c-spec__test describe="Input"}
        {@c-spec__case expect="The progress bar clamps input to the range [0, 1]"}
            {@c-progress-bar state=state_progress label=label_progress value=0.65/}
            {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner/}
            <button class="test__button--change-progress" data-progress-value="-1">Set Progress to -1</button>
            <button class="test__button--change-progress" data-progress-value="2">Set Progress to 2</button>
        {/c-spec__case}
    {/c-spec__test}

    {@c-spec__test describe="Events"}
        {@c-spec__case expect="Clicking on the retry button triggers the progress-retry event"}
            {@c-progress-bar state=state_error label=label_error value=0.65/}
            {@c-progress-bar state=state_error label=label_error value=0.65 useSpinner=useSpinner/}
            <div class="test__try-message"></div>
        {/c-spec__case}
    {/c-spec__test}

    {@c-spec__test describe="RTL"}
        <div dir="rtl">
            {@c-spec__case expect="The progress bar should fill right to left if the class c--direction-rtl is added"}
                {@c-progress-bar state=state_progress label=label_progress value=0.65 class="c--direction-rtl"/}
            {/c-spec__case}

            {@c-spec__case expect="The progress bar should fill counter-clockwise if the class c--direction-rtl is added"}
                {@c-progress-bar state=state_progress label=label_progress value=0.65 useSpinner=useSpinner class="c--direction-rtl"/}
            {/c-spec__case}
        </div>
    {/c-spec__test}
{/c-spec}
